{
  "name": "sleepguard-mvp",
  "version": "1.0.0",
  "description": "Smart sleep reminder app that detects late-night activity",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "build-electron": "npm run build && npm run electron-pack"
  },
  "keywords": [
    "sleep",
    "healthcare",
    "activity-monitoring",
    "wellness",
    "electron"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "electron": "^27.0.0",
    "sqlite3": "^5.1.6",
    "node-machine-id": "^1.1.12",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "styled-components": "^6.1.1",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.6.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.sleepguard.mvp",
    "productName": "SleepGuard MVP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
