{
  "manifest_version": 3,
  "name": "SleepGuard - Sleep Health Assistant",
  "version": "1.0.0",
  "description": "Monitor your late-night browsing activity and get gentle sleep reminders to promote healthy sleep habits.",
  "author": "SleepGuard Team",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "tabs",
    "idle"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SleepGuard - Sleep Health Assistant"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
